<style>
    .campoErro {
        border-color: red;
    }
</style>

<script src="/js/Hospedes/alterar.js"></script>

<div class="container-fluid mt-5 py-5">
    <div class="row">
        <nav id="sidebar" class="col-md-2 col-lg-2 d-md-block bg-light sidebar px-0">
            <ul class="nav flex-column justify-content-center px-2">
                <li class="nav-item">
                    <a class="nav-link botao" href="/Hospedes/criar">
                        Cadastrar Hóspede
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link botao my-3" href="/Hospedes/listar">
                        Listar Hóspedes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link botao" href="/Hospedes/alterar">
                        Alterar Hóspede
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link botao" href="/NF/gerar">
                        Gerar NF
                    </a>
                </li>
            </ul>
        </nav>
        <div class="col-md-9 col-lg-10">
            <form class="p-2">
                <div class="form-group">
                    <input type="hidden" id="inputId" value="<%= usuAlteracao.hospedeId %>">
                    <label for="inputNome">Nome*</label>
                    <input value="<%= usuAlteracao.hospedeNome %>" type="text" class="form-control" id="inputNome">
                </div>
                <div class="d-flex flex-column input-text">
                    <label for="nasc">Data de nascimento*</label>
                    <input type="date" name="nasc" id="nasc" class="w-100">
                </div>
                <div class="d-flex flex-column input-text">
                    <label for="CPF">CPF*</label>
                    <input type="text" name="CPF" id="CPF" maxlength="14" oninput="mascaraCPF()" class="w-100">
                </div>
                <div class="d-flex flex-column input-text w-100">
                    <label for="CEP">CEP*</label>
                    <input type="text" name="CEP" id="CEP" maxlength="9" oninput="mascaraCEP()" class="w-100">

                </div>
                <div class="d-flex flex-column input-text w-100">
                    <label for="checkin">Check-in*</label>
                    <input type="date" name="checkin" id="checkin" class="w-100">
                </div>
                <div class="d-flex flex-column input-text">
                    <label for="checkout">Checkout*</label>
                    <input type="date" name="checkout" id="checkout" class="w-100">
                </div>
                <div class="d-flex align-items-center justify-content-center gap-3">
                    <a class="botao-secundario" href="/Hospedes">Voltar</a>
                    <button type="button" id="btnAlterarHospede" class="botao">Gravar</button>
                </div>
            </form>
        </div>
    </div>
</div>