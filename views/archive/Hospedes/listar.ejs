<script src="/js/Hospedes/listar.js"></script>
<script src="/js/Hospedes/script.js"></script>

<div class="container-fluid mt-5 py-5">
    <div class="card border shadow-xs mb-4">
        <div class="card-body px-3 py-3">
            <form>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>DataNasc</th>
                                <th>CEP</th>
                                <th>CPF</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="corpoTabela">
                            <% lista.forEach(function(value, index) { %>
                                <tr>
                                    <td>
                                        <%= value.hospedeId %>
                                    </td>
                                    <td>
                                        <%= value.hospedeNome %>
                                    </td>
                                    <td>
                                        <%= value.hospedeData %>
                                    </td>
                                    <td>
                                        <%= value.hospedeCPF %>
                                    </td>
                                    <td>
                                        <%= value.hospedeCEP %>
                                    </td>
                                    <td>
                                        <div>
                                            <button data-id="<%= value.hospedeId %>" title="Excluir"
                                                class="btn btn-danger btnExcluir"><i class="fas fa-trash"></i></button>
                                            <a href="alterar/<%= value.hospedeId %>" title="Editar"
                                                class="btn btn-primary">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>