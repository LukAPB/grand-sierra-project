<style>
    .campoErro {
        border-color: red;
    }
</style>

<script src="/js/Hospedes/criar.js"></script>

<div class="container-fluid mt-5 py-5">
    <div class="row">
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar px-0">
            <ul class="nav flex-column px-2">
                <li class="nav-item">
                    <a class="nav-link botao" href="criar">
                        Cadastrar Hóspede
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link botao my-3" href="listar">
                        Listar Hóspedes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link botao" href="alterar">
                        Alterar Hóspede
                    </a>
                </li>
            </ul>
        </nav>
        <div class="col-md-9 col-lg-10">
            <form class="d-flex flex-column align-items-center justify-content-center form-info p-2 w-100" id="form">
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="Nome">Nome completo*</label>
                    <input type="text" name="Nome" id="Nome">
                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="nasc">Data de nascimento*</label>
                    <input type="date" name="nasc" id="nasc">
                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="CPF">CPF*</label>
                    <input type="text" name="CPF" id="CPF" maxlength="14" oninput="mascaraCPF()">
                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="CEP">CEP*</label>
                    <input type="text" name="CEP" id="CEP" maxlength="9" oninput="mascaraCEP()">

                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="checkin">Check-in*</label>
                    <input type="date" name="checkin" id="checkin">
                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="checkout">Checkout*</label>
                    <input type="date" name="checkout" id="checkout">
                </div>
                <span id="erro"></span>
                <div class="d-flex align-items-center gap-3">
                    <a href="/Hospedes" class="botao-secundario text-center">Voltar</a>
                    <button class="botao my-5" id="btnGravarHospede">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>