    .campoErro {
        border-color: red;
    }
</style>

<script src="/js/Hospedes/criar.js"></script>

<h1>Cadastrar novo h贸spede</h1>

<div class="container-fluid">
    <div class="row" style="margin-top:20px;">
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link botao" href="/Hospedes/criar">
                            Cadastrar H贸spede
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link botao my-3" href="/Hospedes/listar">
                            Listar H贸spedes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link botao" href="/Hospedes/alterar">
                            Alterar H贸spede
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="col-md-9 col-lg-10">
            <form class="d-flex flex-column align-items-center justify-content-center form-info p-2 w-100"
                id="form">
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="Nome">Nome completo*</label>
                    <input type="text" name="Nome" id="Nome">
                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="nasc">Data de nascimento*</label>
                    <input type="date" name="nasc" id="nasc">
                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="CPF">CPF*</label>
                    <input type="text" name="CPF" id="CPF" maxlength="14" oninput="mascaraCPF()">
                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="CEP">CEP*</label>
                    <input type="text" name="CEP" id="CEP" maxlength="9" oninput="mascaraCEP()">

                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="checkin">Check-in*</label>
                    <input type="date" name="checkin" id="checkin">
                </div>
                <div class="d-flex flex-column align-items-center input-text">
                    <label for="checkout">Checkout*</label>
                    <input type="date" name="checkout" id="checkout">
                </div>
                <span id="erro"></span>
                <div class="d-flex align-items-center gap-3">
                    <button class="botao my-5" id="btnGravarHospede">Enviar</button>
                    <a href="/Hospedes" class="botao-secundario text-center">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>