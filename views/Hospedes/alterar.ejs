<h1>Alterar h贸spede</h1>

<div class="container-fluid ">
    <div class="row" style="margin-top:20px;">
        <nav id="sidebar" class="col-md-2 col-lg-2 d-md-block bg-light sidebar px-0">
            <div class="position-sticky">
                <ul class="nav flex-column justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link botao" href="/Hospedes/criar">
                            Cadastrar H贸spede
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link botao my-3" href="/Hospedes/listar">
                            Listar H贸spedes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link botao" href="/Hospedes/alterar">
                            Alterar H贸spede
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="col-md-10 col-lg-10">
            <form class="p-2">
                <div class="form-group">
                    <input type="hidden" id="inputId" value="<%= usuAlteracao.hospedeId %>">
                    <label for="inputNome">Nome</label>
                    <input value="<%= usuAlteracao.hospedeNome %>" type="text" class="form-control" id="inputNome">
                </div>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input value="<%= usuAlteracao.hospedeData %>" type="email" class="form-control"
                        id="inputEmail">
                </div>

                <div class="form-group">

                    <div class="form-group">
                        <label for="inputSenha">Senha</label>
                        <input value="<%= usuAlteracao.hospedeSenha %>" type="password" class="form-control"
                            id="inputSenha">
                    </div>
                    <div class="form-group">
                        <label for="inputConfSenha">Confirmar senha</label>
                        <input value="<%= usuAlteracao.hospedeSenha %>" type="password" class="form-control"
                            id="inputConfSenha">
                    </div>

                </div>
                <div class="form-group">
                    <label for="selPerfil">Perfil</label>
                    <select class="form-control" id="selPerfil">
                        <option value="0">--Selecione--</option>
                        <% for(let i=0; i < lista.length; i++) { if(lista[i].perfilId==usuAlteracao.perfilId) { %>
                            <option selected value="<%= lista[i].perfilId %>">
                                <%= lista[i].perfilNome %>
                            </option>
                            <% } else { %>
                                <option value="<%= lista[i].perfilId %>">
                                    <%= lista[i].perfilNome %>
                                </option>
                                <% } %>
                                    <% } %>
                    </select>
                </div>
                <button type="button" id="btnAlterarHospede" class="botao">Gravar</button>
                <a class="botao-secundario" href="/Hospedes">Voltar</a>
            </form>
        </div>
    </div>
</div>